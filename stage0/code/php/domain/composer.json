    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^11.4"
    },
    "autoload": {
        "psr-4": {
            "Katheroine\\Quote\\": [
                "src/"
            ]
        }
